{
  "manifest_version": 3,
  "name": "Card Tab - 卡片式书签管理",
  "version": "1.0.5",
  "description": "专注于书签管理的新标签页扩展，提供卡片式分类整理、本地搜索、个性化主题定制和可选云端同步功能",
  "permissions": ["storage", "activeTab", "contextMenus", "search"],
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content-script.js"],
      "run_at": "document_end"
    }
  ],

  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "author": "EDaoren",
  "homepage_url": "https://github.com/EDaoren/card-tab",
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Card Tab - 卡片标签页"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}